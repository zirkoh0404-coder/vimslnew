<%- include('partials/navbar') %>
<main class="py-20 px-6 max-w-7xl mx-auto space-y-12">
    <h2 class="text-5xl font-black italic uppercase tracking-tighter text-white">ADMIN <span class="text-blue-500">DASHBOARD</span></h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="glass p-8 rounded-[30px] space-y-8">
            <form action="/admin/live" method="POST" class="space-y-4">
                <h3 class="text-xs font-bold uppercase opacity-40 tracking-widest text-white">Live Stream Link</h3>
                <input name="link" value="<%= liveLink %>" placeholder="YouTube Link" class="w-full bg-white/5 border border-white/10 p-4 rounded-2xl text-white outline-none">
                <button type="submit" class="w-full bg-blue-600 py-4 rounded-2xl font-bold uppercase text-xs text-white">Update Live Feed</button>
            </form>

            <form action="/admin/add-match" method="POST" class="space-y-4 text-white">
                <h3 class="text-xs font-bold uppercase opacity-40 tracking-widest text-white">Schedule Match</h3>
        
                <div class="grid grid-cols-2 gap-4">
                    <input name="teamA" placeholder="Team 1" class="bg-white/5 border border-white/10 p-4 rounded-2xl outline-none text-xs">
                    <input name="logoA" placeholder="Logo 1 URL" class="bg-white/5 border border-white/10 p-4 rounded-2xl outline-none text-xs">
                    <input name="teamB" placeholder="Team 2" class="bg-white/5 border border-white/10 p-4 rounded-2xl outline-none text-xs">
                    <input name="logoB" placeholder="Logo 2 URL" class="bg-white/5 border border-white/10 p-4 rounded-2xl outline-none text-xs">
                </div>
                <div class="flex gap-4">
                    <input name="time" placeholder="Match Time (e.g. 18:00)" class="flex-1 bg-white/5 border border-white/10 p-4 rounded-2xl outline-none">
                    <input name="tags" placeholder="Tags (SERIE A, SEASON 1)" class="flex-1 bg-white/5 border border-white/10 p-4 rounded-2xl outline-none text-xs">
                </div>
                <div class="flex gap-4">
                    <label class="flex items-center gap-2 bg-white/5 border border-white/10 px-4 rounded-2xl cursor-pointer w-full">
                        <input type="checkbox" name="isLive" value="true" class="accent-blue-500">
                        <span class="text-[10px] font-bold uppercase text-white">Live Now</span>
                    </label>
                </div>
  
                <button type="submit" class="w-full bg-white text-black py-4 rounded-2xl font-bold uppercase text-xs">Post Match</button>
            </form>

            <div class="space-y-3 pt-4 border-t border-white/5">
                <h3 class="text-xs font-bold uppercase opacity-40 tracking-widest text-white">Current Schedule</h3>
                <div class="max-h-[200px] overflow-y-auto space-y-2">
                    <% matches.forEach((m) => { %>
                        <div class="flex flex-col bg-white/5 p-4 rounded-xl border border-white/5 gap-2">
                            <div class="flex justify-between items-center">
                                <span class="text-[10px] uppercase text-white font-bold"><%= m.teamA %> vs <%= m.teamB %></span>
                                <form action="/admin/delete-match" method="POST" onsubmit="return confirm('Delete this match?');">
                                    <input type="hidden" name="matchId" value="<%= m.id %>">
                                    <button type="submit" class="text-red-500 text-[10px] font-black hover:scale-125 transition">×</button>
                                </form>
                            </div>
                            <div class="flex justify-between items-center">
                                <span class="text-[9px] text-blue-400 font-bold"><%= m.time %></span>
                                <div class="flex gap-1">
                                    <% if(m.tags) { m.tags.split(',').forEach(t => { %>
                                        <span class="bg-blue-600/20 text-blue-400 px-2 py-0.5 rounded text-[8px] font-black uppercase"><%= t.trim() %></span>
                                    <% })} %>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>

        <div class="space-y-8">
            <div class="glass p-8 rounded-[30px] space-y-6">
                <h3 class="text-xs font-bold uppercase opacity-40 tracking-widest text-white">League Records Hub</h3>
                <form action="/admin/add-record" method="POST" class="space-y-3">
                    <input name="title" placeholder="Record Title" class="w-full bg-white/5 border border-white/10 p-3 rounded-xl text-xs text-white outline-none">
                    <input name="holder" placeholder="Record Holder Name" class="w-full bg-white/5 border border-white/10 p-3 rounded-xl text-xs text-white outline-none">
                    <input name="value" placeholder="Value (e.g. 52 Goals)" class="w-full bg-white/5 border border-white/10 p-3 rounded-xl text-xs text-white outline-none">
                    <button type="submit" class="w-full bg-blue-600 py-3 rounded-xl font-bold uppercase text-[10px] text-white">Add Hall of Fame Record</button>
                </form>
                <div class="max-h-[150px] overflow-y-auto space-y-2">
                    <% records.forEach(rec => { %>
                        <div class="flex justify-between items-center bg-white/5 p-3 rounded-xl border border-white/5">
                            <span class="text-[10px] uppercase text-white font-bold"><%= rec.title %>: <%= rec.holder %></span>
                            <form action="/admin/delete-record" method="POST">
                                <input type="hidden" name="recordId" value="<%= rec.id %>">
                                <button class="text-red-500 text-[10px] font-black">×</button>
                            </form>
                        </div>
                    <% }) %>
                </div>
            </div>

            <div class="glass p-8 rounded-[30px] border border-blue-500/20 space-y-6">
                <h3 class="text-xs font-black uppercase text-blue-500 tracking-widest">Index News Manager</h3>
                <form action="/admin/add-story" method="POST" class="space-y-3">
                    <input name="title" placeholder="Story Title" required class="w-full bg-white/5 border border-white/10 p-3 rounded-xl text-xs text-white outline-none focus:border-blue-500">
                    <textarea name="description" placeholder="Short Headline/Description..." required class="w-full bg-white/5 border border-white/10 p-3 rounded-xl text-xs text-white outline-none focus:border-blue-500 h-20"></textarea>
                    <input name="image" placeholder="Image URL (Widescreen recommended)" required class="w-full bg-white/5 border border-white/10 p-3 rounded-xl text-xs text-white outline-none focus:border-blue-500">
                    <button type="submit" class="w-full bg-white text-black py-3 rounded-xl font-black uppercase text-[10px]">Publish Story</button>
                </form>
                <div class="max-h-[200px] overflow-y-auto space-y-2">
                    <% if (typeof stories !== 'undefined') { %>
                        <% stories.forEach((story, sIdx) => { %>
                            <div class="flex items-center gap-3 bg-white/5 p-3 rounded-xl border border-white/5">
                                <img src="<%= story.image %>" class="w-10 h-10 rounded-lg object-cover">
                                <div class="flex-1">
                                    <p class="text-[10px] font-black text-white uppercase truncate w-32"><%= story.title %></p>
                                </div>
                                <form action="/admin/delete-story" method="POST">
                                    <input type="hidden" name="storyIndex" value="<%= sIdx %>">
                                    <button class="text-red-500 text-[10px] font-black hover:scale-125 transition">REMOVE</button>
                                </form>
                            </div>
                        <% }) %>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <div class="glass p-10 rounded-[40px] border border-blue-500/40 shadow-[0_0_50px_rgba(59,130,246,0.1)]">
        <h2 class="text-2xl font-black italic uppercase text-white mb-2">Match <span class="text-blue-500">Detailed Reports</span></h2>
        <p class="text-[10px] text-white/40 uppercase font-bold tracking-widest mb-8">Update Overview, Lineups, and Stats for played matches</p>

        <form action="/admin/update-match-details" method="POST" class="space-y-8">
            <div class="bg-white/5 p-6 rounded-3xl border border-white/10">
                <h3 class="text-[10px] font-black uppercase text-blue-500 tracking-[0.2em] mb-4">1. Select Match</h3>
                <select name="matchId" class="w-full bg-black border border-white/10 p-4 rounded-2xl text-white text-xs outline-none focus:border-blue-500" required>
                    <option value="" disabled selected>Select a scheduled match to update...</option>
                    <% matches.forEach(m => { %>
                        <option value="<%= m.id %>"><%= m.teamA %> vs <%= m.teamB %> (<%= m.time %>)</option>
                    <% }) %>
                </select>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                <div class="bg-white/5 p-6 rounded-3xl border border-white/10 space-y-4">
                    <h3 class="text-[10px] font-black uppercase text-blue-500 tracking-[0.2em] mb-4">2. Match Overview & Media</h3>
                    <div>
                        <label class="text-[9px] uppercase font-bold opacity-40 text-white mb-2 block">Match Headline</label>
                        <textarea name="narrative" placeholder="e.g. A dominant performance by Team A..." class="w-full bg-black border border-white/10 p-3 rounded-xl text-white text-xs outline-none h-20"></textarea>
                    </div>
                    <div class="grid grid-cols-2 gap-4">
                        <input type="number" name="possessionA" placeholder="Team A Pos %" class="w-full bg-black border border-white/10 p-3 rounded-xl text-white text-xs outline-none">
                        <input type="number" name="possessionB" placeholder="Team B Pos %" class="w-full bg-black border border-white/10 p-3 rounded-xl text-white text-xs outline-none">
                    </div>
                    <input name="highlights" placeholder="Highlights Video URL" class="w-full bg-black border border-white/10 p-3 rounded-xl text-white text-xs outline-none">
                    <div class="grid grid-cols-2 gap-4">
                        <input name="mvpName" placeholder="MVP Name" class="w-full bg-black border border-white/10 p-3 rounded-xl text-white text-xs outline-none">
                        <input name="mvpCardUrl" placeholder="MVP Card URL" class="w-full bg-black border border-white/10 p-3 rounded-xl text-white text-xs outline-none">
                    </div>
                    <textarea name="standouts" placeholder="Overview Standouts (Player, Contribution)" class="w-full bg-black border border-white/10 p-3 rounded-xl text-white text-xs outline-none h-20"></textarea>
                </div>

                <div class="bg-white/5 p-6 rounded-3xl border border-white/10 space-y-4">
                    <h3 class="text-[10px] font-black uppercase text-blue-500 tracking-[0.2em] mb-4">3. Team Stat Totals</h3>
                    <div class="grid grid-cols-2 gap-6">
                        <div class="space-y-3">
                            <p class="text-[8px] font-black text-blue-400 uppercase tracking-widest">Team A</p>
                            <input type="number" name="goalsA" placeholder="Total Goals" class="w-full bg-black border border-white/10 p-3 rounded-xl text-white text-xs outline-none">
                            <input type="number" name="assistsA" placeholder="Total Assists" class="w-full bg-black border border-white/10 p-3 rounded-xl text-white text-xs outline-none">
                            <input type="number" name="savesA" placeholder="Total Saves" class="w-full bg-black border border-white/10 p-3 rounded-xl text-white text-xs outline-none">
                        </div>
                        <div class="space-y-3">
                            <p class="text-[8px] font-black text-red-400 uppercase tracking-widest">Team B</p>
                            <input type="number" name="goalsB" placeholder="Total Goals" class="w-full bg-black border border-white/10 p-3 rounded-xl text-white text-xs outline-none">
                            <input type="number" name="assistsB" placeholder="Total Assists" class="w-full bg-black border border-white/10 p-3 rounded-xl text-white text-xs outline-none">
                            <input type="number" name="savesB" placeholder="Total Saves" class="w-full bg-black border border-white/10 p-3 rounded-xl text-white text-xs outline-none">
                        </div>
                    </div>
                </div>
            </div>

            <div class="bg-white/5 p-8 rounded-[40px] border border-white/10">
                <h3 class="text-[10px] font-black uppercase text-blue-500 tracking-[0.2em] mb-6">4. Core Player Statistics (Individual)</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
                    <div class="space-y-4">
                        <div class="flex justify-between items-center">
                            <p class="text-[10px] font-black text-white/40 uppercase">Team A Performance</p>
                            <button type="button" onclick="addStatRow('teamA')" class="text-[10px] bg-blue-600/20 text-blue-400 px-4 py-1.5 rounded-full font-bold uppercase border border-blue-500/20">+ Add Player</button>
                        </div>
                        <div id="statRows-teamA" class="space-y-3"></div>
                    </div>
                    <div class="space-y-4">
                        <div class="flex justify-between items-center">
                            <p class="text-[10px] font-black text-white/40 uppercase">Team B Performance</p>
                            <button type="button" onclick="addStatRow('teamB')" class="text-[10px] bg-red-600/20 text-red-400 px-4 py-1.5 rounded-full font-bold uppercase border border-red-500/20">+ Add Player</button>
                        </div>
                        <div id="statRows-teamB" class="space-y-3"></div>
                    </div>
                </div>
            </div>

            <div class="bg-white/5 p-6 rounded-3xl border border-white/10">
                <h3 class="text-[10px] font-black uppercase text-blue-500 tracking-[0.2em] mb-4">5. Match Lineups</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <textarea name="lineupA" rows="8" placeholder="Team A Lineup (GK:Name:Rating)" class="w-full bg-black border border-white/10 p-4 rounded-2xl text-white text-xs outline-none focus:border-blue-500"></textarea>
                    <textarea name="lineupB" rows="8" placeholder="Team B Lineup (GK:Name:Rating)" class="w-full bg-black border border-white/10 p-4 rounded-2xl text-white text-xs outline-none focus:border-blue-500"></textarea>
                </div>
                <button type="submit" class="w-full bg-blue-600 py-5 rounded-[20px] font-black uppercase text-xs text-white shadow-[0_10px_30px_rgba(37,99,235,0.3)] hover:scale-[1.01] transition-transform">Update Match Details</button>
            </div>
        </form>
    </div>

    <div class="glass p-10 rounded-[40px] border border-blue-500/20">
        <h2 class="text-2xl font-black italic uppercase text-blue-500 mb-8">Metrics Leaderboards</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <% ['scorers', 'assists', 'saves'].forEach(type => { %>
                 <div class="space-y-4">
                    <h4 class="text-[10px] font-black uppercase text-white/40 tracking-widest text-center"><%= type %> Leaderboard</h4>
                    <form action="/admin/update-stat" method="POST" class="flex flex-col gap-2">
                        <input type="hidden" name="type" value="<%= type %>">
                        <input name="playerName" placeholder="Player Name" class="bg-white/5 border border-white/10 p-3 rounded-xl text-[10px] text-white outline-none">
                        <input name="value" type="number" placeholder="Stat Value" class="bg-white/5 border border-white/10 p-3 rounded-xl text-[10px] text-white outline-none">
                        <button type="submit" class="bg-blue-600 py-2 rounded-xl text-[9px] font-black uppercase text-white">Add/Update</button>
                    </form>
                    <div class="space-y-2">
                        <% (leaderboards[type] || []).forEach((entry, idx) => { %>
                            <div class="flex justify-between bg-black/40 p-2 rounded-lg border border-white/5">
                                <span class="text-[10px] text-white uppercase"><%= entry.name %></span>
                                <div class="flex items-center gap-3">
                                    <span class="text-[10px] text-blue-500 font-bold"><%= entry.value %></span>
                                    <form action="/admin/delete-stat" method="POST">
                                        <input type="hidden" name="type" value="<%= type %>">
                                        <input type="hidden" name="statIndex" value="<%= idx %>">
                                        <button class="text-red-500 text-[10px]">×</button>
                                    </form>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <div class="glass p-10 rounded-[40px] border border-yellow-500/20">
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-8">
            <div>
                <h2 class="text-2xl font-black italic uppercase text-yellow-500">Review Queue</h2>
                <p class="text-[10px] text-white/40 uppercase font-bold tracking-widest">Awaiting verification</p>
            </div>
            <input type="text" onkeyup="filterQueue(this)" placeholder="SEARCH QUEUE..." class="bg-white/5 border border-white/10 px-6 py-3 rounded-2xl text-[10px] text-white outline-none w-full md:w-64 focus:border-yellow-500 transition-all">
        </div>

        <div class="space-y-3" id="queueList">
            <% let pending = players.filter(p => !p.verified); %>
            <% if (pending.length > 0) { %>
                <% pending.forEach(player => { %>
                    <details class="queue-card group bg-white/[0.03] border border-white/5 rounded-2xl overflow-hidden hover:border-yellow-500/30 transition-all">
                        <summary class="p-5 cursor-pointer flex items-center justify-between list-none">
                            <div class="flex items-center gap-4">
                                <div class="w-10 h-10 bg-yellow-600/20 rounded-full flex items-center justify-center font-black italic text-yellow-500 uppercase"><%= player.name.charAt(0) %></div>
                                <div>
                                     <p class="font-black text-white uppercase italic text-sm"><%= player.name %></p>
                                    <p class="text-[9px] text-blue-400 font-bold uppercase"><%= player.discord %></p>
                                </div>
                            </div>
                            <span class="text-[10px] font-black uppercase text-yellow-500/50">Review Application ↓</span>
                        </summary>
                        <div class="p-8 bg-black/40 border-t border-white/5">
                            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-8">
                                <div class="space-y-4">
                                    <div>
                                        <p class="text-[10px] font-black uppercase text-white/40 mb-2">Password chosen by user</p>
                                        <p class="bg-white/5 p-3 rounded-lg text-xs text-yellow-500 font-mono"><%= player.password %></p>
                                    </div>
                                    <div>
                                         <p class="text-[10px] font-black uppercase text-white/40 mb-2">Player Bio / Application</p>
                                         <div class="bg-white/5 p-4 rounded-xl text-xs text-white/80 italic border border-white/5">"<%= player.experience || player.bio %>"</div>
                                    </div>
                                </div>
                                <div class="lg:col-span-2 space-y-6">
                                    <p class="text-[10px] font-black uppercase text-blue-500 tracking-widest">Verification & Card Assignment</p>
                                    <form action="/admin/approve-player" method="POST" class="space-y-6">
                                        <input type="hidden" name="playerId" value="<%= player.id %>">
                                        <div class="space-y-3">
                                            <label class="text-[11px] font-black uppercase text-white tracking-widest">Market Card Image URL</label>
                                           <input name="cardImage" placeholder="Paste Custom Card URL" class="w-full bg-black border border-white/10 p-4 rounded-2xl text-white text-xs outline-none focus:border-blue-500 shadow-inner">
                                        </div>
                                        <button type="submit" class="w-full bg-green-600 hover:bg-green-500 py-5 rounded-xl text-xs font-black uppercase text-white transition shadow-lg shadow-green-600/20">Approve & Publish Card</button>
                                    </form>
                                    <form action="/admin/delete-player" method="POST">
                                        <input type="hidden" name="playerId" value="<%= player.id %>">
                                        <button type="submit" class="w-full bg-red-600/10 hover:bg-red-600 text-red-500 hover:text-white px-8 py-5 rounded-xl text-xs font-black uppercase transition border border-red-500/20">Reject App</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </details>
                <% }) %>
            <% } else { %>
                <div class="py-12 text-center bg-white/[0.02] rounded-3xl border border-dashed border-white/10">
                    <p class="text-xs opacity-20 uppercase font-black tracking-[0.5em] text-white">No registrations pending</p>
                </div>
            <% } %>
        </div>
    </div>

    <div class="glass p-10 rounded-[30px] space-y-10">
        <div class="flex justify-between items-center border-b border-white/5 pb-6">
            <h3 class="text-xs font-bold uppercase opacity-40 tracking-widest text-blue-500">League Tables & Rosters</h3>
            <form action="/admin/add-group" method="POST" class="flex gap-2">
                <input name="name" placeholder="New Table Name" class="bg-white/5 border border-white/10 px-4 py-2 rounded-xl text-xs text-white">
                <button type="submit" class="bg-blue-600 px-4 py-2 rounded-xl text-[10px] font-bold uppercase text-white">Create Table</button>
            </form>
        </div>

        <% groups.forEach(group => { %>
            <div class="space-y-8 p-6 border border-white/5 rounded-[40px] bg-white/[0.02]">
                <div class="flex justify-between items-center">
                    <h4 class="text-blue-500 font-black italic uppercase text-xl"><%= group.name %></h4>
                    <form action="/admin/delete-group" method="POST">
                        <input type="hidden" name="groupId" value="<%= group.id %>">
                        <button type="submit" class="text-red-500 text-[9px] font-bold border border-red-500/30 px-3 py-1 rounded-full uppercase">Delete Table</button>
                    </form>
                </div>

                <div class="grid grid-cols-1 gap-6">
                    <% group.teams.forEach((team, index) => { %>
                        <div class="bg-white/5 p-6 rounded-3xl border border-white/5 space-y-6">
                            <form action="/admin/update-team" method="POST" class="grid grid-cols-2 md:grid-cols-7 gap-3 items-center text-white">
                                <input type="hidden" name="groupId" value="<%= group.id %>">
                                <input type="hidden" name="teamIndex" value="<%= index %>">
                                <div class="flex items-center gap-2 px-2">
                                    <img src="<%= team.logo %>" class="w-5 h-5 object-contain">
                                    <span class="font-bold text-xs truncate w-24"><%= team.name %></span>
                                </div>
                                <input name="mp" type="number" value="<%= team.mp || 0 %>" class="bg-black/40 rounded p-1 text-white text-center border-none text-[10px]">
                                <input name="wins" type="number" value="<%= team.wins || 0 %>" class="bg-black/40 rounded p-1 text-white text-center border-none text-[10px]">
                                <input name="loses" type="number" value="<%= team.loses || 0 %>" class="bg-black/40 rounded p-1 text-white text-center border-none text-[10px]">
                                <input name="pts" type="number" value="<%= team.pts || 0 %>" class="bg-black/40 rounded p-1 text-blue-400 text-center border-none text-[10px]">
                                <button type="submit" class="bg-blue-600 py-2 rounded-xl text-[8px] font-bold uppercase">Update</button>
                                <button type="submit" formaction="/admin/delete-team" class="bg-red-500/10 text-red-500 py-2 rounded-xl text-[8px] font-bold uppercase">Delete</button>
                            </form>

                            <div class="bg-black/20 p-4 rounded-2xl space-y-4">
                                <div class="flex flex-wrap gap-2">
                                    <% (team.roster || []).forEach((player, pIdx) => { %>
                                         <div class="bg-white/5 px-3 py-1.5 rounded-full flex items-center gap-2 border border-white/5">
                                            <span class="text-[10px] uppercase <%= player.isManager ? 'text-blue-400 font-black' : 'text-white' %>">
                                                <%= player.isManager ? 'MGR:' : '' %> <%= player.name %>
                                              </span>
                                            <form action="/admin/delete-from-roster" method="POST">
                                                <input type="hidden" name="groupId" value="<%= group.id %>">
                                                <input type="hidden" name="teamIndex" value="<%= index %>">
                                                <input type="hidden" name="playerIndex" value="<%= pIdx %>">
                                                <button type="submit" class="text-red-500 font-bold hover:scale-125 transition">×</button>
                                                </form>
                                        </div>
                                    <% }) %>
                                  </div>
                                  <form action="/admin/add-to-roster" method="POST" class="flex gap-2">
                                    <input type="hidden" name="groupId" value="<%= group.id %>">
                                    <input type="hidden" name="teamIndex" value="<%= index %>">
                                    <input name="playerName" required placeholder="Register Player" class="bg-black/40 p-2 rounded-xl text-[10px] flex-1 text-white outline-none">
                                   <select name="isManager" class="bg-black/40 p-2 rounded-xl text-[10px] text-white outline-none">
                                        <option value="false">Player</option>
                                        <option value="true">Manager</option>
                                    </select>
                                    <button type="submit" class="bg-white/10 px-4 rounded-xl text-[9px] font-black uppercase text-white hover:bg-white/20 transition">Add To Squad</button>
                                    </form>
                        </div>
                        </div>
                    <% }) %>
                    <form action="/admin/update-team" method="POST" class="grid grid-cols-3 gap-2 p-6 border border-dashed border-white/10 rounded-3xl">
                        <input type="hidden" name="groupId" value="<%= group.id %>">
                        <input name="teamName" placeholder="Team Name" class="bg-white/5 p-3 rounded-xl text-xs text-white outline-none">
                        <input name="logo" placeholder="Logo URL" class="bg-white/5 p-3 rounded-xl text-xs text-white outline-none">
                        <button type="submit" class="bg-white/10 text-white text-[10px] font-bold uppercase rounded-xl">Add New Team</button>
                    </form>
                </div>
             </div>
        <% }) %>
    </div>

    <div class="glass p-10 rounded-[40px] border border-blue-500/20">
        <div class="flex justify-between items-center mb-8">
            <h2 class="text-2xl font-black italic uppercase text-white">Player <span class="text-blue-500">Market</span></h2>
            <input type="text" id="playerSearch" onkeyup="filterPlayers()" placeholder="SEARCH MARKET..." class="bg-white/5 border border-white/10 px-6 py-3 rounded-2xl text-[10px] text-white outline-none w-64 focus:border-blue-500 transition-all">
        </div>

         <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" id="marketList">
            <% players.filter(p => p.verified).forEach(player => { %>
                <details class="player-card group bg-white/[0.03] border border-white/5 rounded-3xl overflow-hidden hover:border-blue-500/30 transition-all" data-name="<%= player.name.toLowerCase() %>">
                    <summary class="p-6 cursor-pointer flex items-center justify-between list-none">
                         <div class="flex items-center gap-4">
                            <img src="<%= player.cardImage %>" class="w-12 h-12 rounded-xl object-cover border border-white/10">
                            <div>
                                 <p class="font-black text-white uppercase italic"><%= player.name %></p>
                                <p class="text-[9px] text-blue-400 font-bold uppercase">Verified Pro</p>
                            </div>
                         </div>
                        <span class="text-[10px] font-black text-white/20 group-hover:text-blue-500 uppercase">Edit Stats ↓</span>
                    </summary>
                    <div class="p-8 bg-black/40 border-t border-white/5">
                         <div class="bg-yellow-500/5 border border-yellow-500/20 p-4 rounded-xl mb-6">
                            <p class="text-[8px] font-black uppercase text-yellow-500 mb-1">Security Credentials</p>
                            <div class="flex items-center justify-between">
                                <p class="text-xs text-white/60 font-mono tracking-widest uppercase">Password: <span class="text-white font-bold" id="passText-<%= player.id %>">••••••••</span></p>
                                <button type="button" onclick="togglePasswordView('<%= player.id %>', '<%= player.password %>')" class="text-[10px] font-black text-yellow-500 uppercase hover:underline">Toggle View</button>
                            </div>
                         </div>

                         <form action="/admin/update-market-player" method="POST" class="space-y-6">
                            <input type="hidden" name="playerId" value="<%= player.id %>">
                            <input type="hidden" name="username" value="<%= player.name %>"> 
                            
                            <div class="grid grid-cols-2 gap-4">
                                <div>
                                    <label class="text-[8px] font-black uppercase text-white/40 mb-1 block">Goals</label>
                                    <input name="goals" type="number" value="<%= player.goals %>" placeholder="Goals" class="w-full bg-white/5 border border-white/10 p-3 rounded-xl text-white text-xs outline-none">
                                </div>
                                <div>
                                    <label class="text-[8px] font-black uppercase text-white/40 mb-1 block">Assists</label>
                                    <input name="assists" type="number" value="<%= player.assists %>" placeholder="Assists" class="w-full bg-white/5 border border-white/10 p-3 rounded-xl text-white text-xs outline-none">
                                </div>
                                <div>
                                    <label class="text-[8px] font-black uppercase text-white/40 mb-1 block">Saves</label>
                                    <input name="saves" type="number" value="<%= player.saves %>" placeholder="Saves" class="w-full bg-white/5 border border-white/10 p-3 rounded-xl text-white text-xs outline-none">
                                </div>
                                <div>
                                    <label class="text-[8px] font-black uppercase text-white/40 mb-1 block">MVPs</label>
                                    <input name="mvps" type="number" value="<%= player.mvps %>" placeholder="MVPs" class="w-full bg-white/5 border border-white/10 p-3 rounded-xl text-white text-xs outline-none">
                                </div>
                            </div>
                            <div>
                                <label class="text-[9px] font-black uppercase text-white/40 mb-2 block">Market Card URL</label>
                                <input name="cardImage" value="<%= player.cardImage %>" class="w-full bg-white/5 border border-white/10 p-3 rounded-xl text-white text-xs outline-none focus:border-blue-500">
                            </div>
                            <div>
                                <label class="text-[9px] font-black uppercase text-white/40 mb-2 block">Player Bio</label>
                                <textarea name="bio" placeholder="Bio" class="w-full bg-white/5 border border-white/10 p-3 rounded-xl text-white text-xs outline-none h-20"><%= player.bio %></textarea>
                            </div>
                            
                            <div class="flex gap-3 pt-4 border-t border-white/5">
                                <button type="submit" class="flex-1 bg-blue-600 hover:bg-blue-500 py-4 rounded-xl font-black uppercase text-[10px] text-white">Update Card & Stats</button>
                                <button type="button" onclick="triggerDelete('<%= player.id %>')" class="bg-red-600/10 hover:bg-red-600 text-red-500 hover:text-white px-6 py-4 rounded-xl text-[10px] font-black uppercase transition-all border border-red-500/20">Remove</button>
                            </div>
                         </form>
                    </div>
                </details>
            <% }) %>
         </div>
    </div>
</main>

<script>
    function togglePasswordView(id, actualPass) {
        const textElement = document.getElementById(`passText-${id}`);
        if (textElement.innerText === '••••••••') {
            textElement.innerText = actualPass;
        } else {
            textElement.innerText = '••••••••';
        }
    }

    function triggerDelete(id) {
        if (confirm('PERMANENTLY DELETE THIS PLAYER FROM THE MARKET?')) {
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '/admin/delete-player';
            const input = document.createElement('input');
            input.type = 'hidden';
            input.name = 'playerId';
            input.value = id;
            form.appendChild(input);
            document.body.appendChild(form);
            form.submit();
        }
    }

    function filterPlayers() {
        let input = document.getElementById('playerSearch').value.toLowerCase();
        let cards = document.getElementsByClassName('player-card');
        for (let i = 0; i < cards.length; i++) {
            let name = cards[i].getAttribute('data-name');
            cards[i].style.display = name.includes(input) ? "" : "none";
        }
    }

    function filterQueue(input) {
        let val = input.value.toLowerCase();
        let cards = document.getElementsByClassName('queue-card');
        for (let card of cards) {
            let name = card.querySelector('p').innerText.toLowerCase();
            card.style.display = name.includes(val) ? "" : "none";
        }
    }

    function addStatRow(team) {
        const container = document.getElementById(`statRows-${team}`);
        const rowId = Date.now();
        const html = `
            <div id="row-${rowId}" class="flex items-center gap-2 bg-black/40 p-2 rounded-xl border border-white/5 animate-in slide-in-from-right duration-300">
                <input name="${team}Player[]" placeholder="Player Name" class="flex-1 bg-transparent text-[10px] text-white border-none outline-none px-2" required>
                <select name="${team}Type[]" class="bg-white/5 text-[9px] text-white/60 border-none rounded p-1">
                    <option value="goals">Goals</option>
                    <option value="assists">Assists</option>
                    <option value="saves">Saves</option>
                </select>
                <input name="${team}MainValue[]" type="number" placeholder="Count" class="w-12 bg-white/5 text-[10px] text-white border-none rounded p-1 text-center" required>
                <div class="w-px bg-white/10 mx-1"></div>
                <input name="${team}Assists[]" type="number" placeholder="Ast" class="w-12 bg-white/5 text-[10px] text-blue-400 border-none rounded p-1 text-center" required>
                <button type="button" onclick="document.getElementById('row-${rowId}').remove()" class="text-red-500 font-bold px-2">×</button>
            </div>
        `;
        container.insertAdjacentHTML('beforeend', html);
    }
</script>

