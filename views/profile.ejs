<%- include('partials/navbar') %>

<main class="py-24 px-6 max-w-6xl mx-auto">
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-12 gap-6">
        <div>
            <h2 class="text-5xl font-black italic uppercase text-white tracking-tighter">
                Player <span class="text-blue-500">Hub</span>
            </h2>
            <p class="text-xs font-bold opacity-40 uppercase tracking-[0.2em] mt-2 text-white">
                Dashboard / Profile Settings
            </p>
        </div>
        
        <div class="flex items-center gap-4">
            <form action="/profile/delete" method="POST" onsubmit="return confirm('Are you sure? This will permanentely remove your stats and market presence.')">
                <button class="group flex items-center gap-2 text-red-500/50 hover:text-red-500 text-[10px] font-black border border-red-500/10 px-6 py-3 rounded-2xl hover:bg-red-500/10 transition-all uppercase tracking-widest">
                    <span>Delete Account</span>
                </button>
            </form>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
        
        <div class="lg:col-span-4 space-y-6">
            <div class="glass p-6 rounded-[35px] border border-white/5 relative overflow-hidden group">
                <div class="absolute -top-12 -left-12 w-32 h-32 bg-blue-600/10 blur-3xl rounded-full"></div>
                
                <p class="text-[10px] font-black uppercase opacity-30 text-white tracking-widest mb-4">Official Market Card</p>
                
                <div class="relative aspect-[3/4] rounded-[25px] overflow-hidden border border-white/10 bg-black/40 shadow-2xl">
                    <% if (user && user.cardImage) { %>
                        <img src="<%= user.cardImage %>" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700">
                    <% } else { %>
                        <div class="w-full h-full flex flex-col items-center justify-center p-8 text-center space-y-4">
                            <div class="relative">
                                <div class="w-16 h-16 border-2 border-white/5 border-t-blue-500 rounded-full animate-spin"></div>
                                <div class="absolute inset-0 flex items-center justify-center">
                                    <span class="text-blue-500 text-xs font-black italic">VIM</span>
                                </div>
                            </div>
                            <p class="text-[10px] font-black uppercase text-white/40 leading-relaxed tracking-tighter">
                                Verification Pending<br>
                                <span class="opacity-50 font-medium">Admin is crafting your card</span>
                            </p>
                        </div>
                    <% } %>
                    
                    <div class="absolute bottom-0 left-0 right-0 p-6 bg-gradient-to-t from-black via-black/80 to-transparent">
                        <p class="text-2xl font-black italic text-white uppercase leading-none"><%= user ? user.name : 'Unknown' %></p>
                        <p class="text-blue-500 font-bold text-[10px] uppercase tracking-widest mt-1">@<%= user ? user.discord : 'none' %></p>
                    </div>
                </div>

                <% if (user && user.cardImage) { %>
                    <div class="mt-4 flex items-center justify-center gap-2 py-2 bg-blue-500/5 rounded-xl border border-blue-500/10">
                        <div class="w-1.5 h-1.5 bg-blue-500 rounded-full animate-pulse"></div>
                        <p class="text-[9px] font-black text-blue-400 uppercase italic">Verified Player Card</p>
                    </div>
                <% } %>
            </div>

            <div class="grid grid-cols-3 gap-3">
                <div class="glass p-4 rounded-2xl border border-white/5 text-center">
                    <p class="text-[9px] font-black uppercase opacity-30 text-white">Goals</p>
                    <p class="text-xl font-black italic text-white"><%= user ? user.goals : 0 %></p>
                </div>
                <div class="glass p-4 rounded-2xl border border-white/5 text-center">
                    <p class="text-[9px] font-black uppercase opacity-30 text-white">Assists</p>
                    <p class="text-xl font-black italic text-white"><%= user ? user.assists : 0 %></p>
                </div>
                <div class="glass p-4 rounded-2xl border border-white/5 text-center">
                    <p class="text-[9px] font-black uppercase opacity-30 text-white">MVPs</p>
                    <p class="text-xl font-black italic text-white"><%= user ? user.mvps : 0 %></p>
                </div>
            </div>
        </div>

        <div class="lg:col-span-8">
            <div class="glass p-8 md:p-12 rounded-[40px] border border-white/5 relative overflow-hidden">
                <div class="absolute top-0 right-0 p-12 opacity-5 pointer-events-none">
                    <h2 class="text-9xl font-black italic uppercase text-white">EDIT</h2>
                </div>

                <form action="/profile/update" method="POST" class="relative z-10 space-y-8">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                        <div class="space-y-2">
                            <label class="text-[10px] font-black uppercase tracking-[0.2em] opacity-40 ml-1 text-white">Display Name</label>
                            <div class="relative">
                                <span class="absolute left-4 top-1/2 -translate-y-1/2 opacity-20 text-white">ðŸ‘¤</span>
                                <input name="name" value="<%= user ? user.name : '' %>" 
                                    class="w-full bg-white/5 border border-white/10 p-4 pl-12 rounded-2xl text-white outline-none focus:border-blue-500/50 focus:bg-white/[0.08] transition-all font-bold">
                            </div>
                        </div>

                        <div class="space-y-2">
                            <label class="text-[10px] font-black uppercase tracking-[0.2em] opacity-40 ml-1 text-white">Discord Identity</label>
                            <div class="relative">
                                <span class="absolute left-4 top-1/2 -translate-y-1/2 opacity-20 text-white">ðŸ’¬</span>
                                <input name="discord" value="<%= user ? user.discord : '' %>" 
                                    class="w-full bg-white/5 border border-white/10 p-4 pl-12 rounded-2xl text-white outline-none focus:border-blue-500/50 focus:bg-white/[0.08] transition-all font-bold">
                            </div>
                        </div>
                    </div>

                    <div class="space-y-2">
                        <label class="text-[10px] font-black uppercase tracking-[0.2em] opacity-40 ml-1 text-white">Market Biography</label>
                        <div class="relative">
                            <textarea name="bio" rows="5" 
                                placeholder="Describe your playstyle, history, and achievements..."
                                class="w-full bg-white/5 border border-white/10 p-6 rounded-[30px] text-white outline-none focus:border-blue-500/50 focus:bg-white/[0.08] transition-all leading-relaxed"><%= user ? (user.bio || user.experience) : '' %></textarea>
                        </div>
                        <p class="text-[9px] font-medium opacity-20 italic text-white ml-2">This bio will be visible to all scouts in the Market.</p>
                    </div>

                    <div class="pt-4">
                        <button type="submit" class="group relative w-full md:w-auto px-12 py-5 bg-blue-600 rounded-2xl font-black uppercase italic text-white shadow-2xl shadow-blue-600/20 hover:scale-[1.02] active:scale-95 transition-all overflow-hidden">
                            <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-1000"></div>
                            <span class="relative">Update Profile Data</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>

    </div>
</main>

<style>
    .glass {
        background: rgba(255, 255, 255, 0.03);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
    }
</style>
