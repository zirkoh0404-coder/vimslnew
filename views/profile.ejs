<%- include('partials/navbar') %>

<main class="py-24 px-6 max-w-4xl mx-auto">
    <div class="glass p-10 rounded-[40px] border border-blue-500/20 relative overflow-hidden">
        <div class="absolute -top-24 -right-24 w-64 h-64 bg-blue-600/20 blur-[100px] rounded-full"></div>

        <div class="relative z-10 space-y-8">
            <div class="flex justify-between items-end">
                <div>
                    <h2 class="text-4xl font-black italic uppercase text-white">Player <span class="text-blue-500">Settings</span></h2>
                    <p class="text-xs font-bold opacity-40 uppercase tracking-widest mt-2 text-white">Manage your market presence</p>
                </div>
                <form action="/profile/delete" method="POST" onsubmit="return confirm('Are you sure? This will remove you from the Market.')">
                    <button class="text-red-500 text-[10px] font-black border border-red-500/20 px-4 py-2 rounded-full hover:bg-red-500 hover:text-white transition-all uppercase">Delete Profile</button>
                </form>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
                <div class="space-y-4">
                    <p class="text-[10px] font-black uppercase opacity-30 text-white tracking-tighter">Live Card Preview</p>
                    <div class="relative group aspect-[3/4] rounded-3xl overflow-hidden border-2 border-white/10">
                        <img src="<%= user.cardImage || 'https://via.placeholder.com/400x600' %>" class="w-full h-full object-cover">
                        <div class="absolute bottom-0 left-0 right-0 p-6 bg-gradient-to-t from-black to-transparent">
                            <p class="text-2xl font-black italic text-white uppercase"><%= user.name %></p>
                            <p class="text-blue-500 font-bold text-xs uppercase tracking-widest"><%= user.discord %></p>
                        </div>
                    </div>
                </div>

                <form action="/profile/update" method="POST" class="space-y-6">
                    <div class="space-y-4">
                        <div>
                            <label class="text-[10px] font-black uppercase opacity-40 mb-2 block text-white">Player Name</label>
                            <input name="name" value="<%= user.name %>" class="w-full bg-white/5 border border-white/10 p-4 rounded-2xl text-white outline-none focus:border-blue-500">
                        </div>
                        <div>
                            <label class="text-[10px] font-black uppercase opacity-40 mb-2 block text-white">Discord Username</label>
                            <input name="discord" value="<%= user.discord %>" class="w-full bg-white/5 border border-white/10 p-4 rounded-2xl text-white outline-none focus:border-blue-500">
                        </div>
                        <div>
                            <label class="text-[10px] font-black uppercase opacity-40 mb-2 block text-white">Card Image URL</label>
                            <input name="cardImage" value="<%= user.cardImage %>" placeholder="https://..." class="w-full bg-white/5 border border-white/10 p-4 rounded-2xl text-white outline-none focus:border-blue-500">
                        </div>
                        <div>
                            <label class="text-[10px] font-black uppercase opacity-40 mb-2 block text-white">Short Bio</label>
                            <textarea name="bio" rows="4" class="w-full bg-white/5 border border-white/10 p-4 rounded-2xl text-white outline-none focus:border-blue-500"><%= user.bio %></textarea>
                        </div>
                    </div>
                    <button type="submit" class="w-full bg-blue-600 py-5 rounded-2xl font-black uppercase italic text-white shadow-xl shadow-blue-600/20 hover:scale-[1.02] transition-transform">Save Changes</button>
                </form>
            </div>
        </div>
    </div>
</main>
